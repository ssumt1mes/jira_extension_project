{
  "manifest_version": 3,
  "name": "Jira Related Step Viewer",
  "version": "0.1.0",
  "description": "Show related Jira issues grouped by product and step.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "*://*.atlassian.net/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/*",
        "http://localhost/*",
        "http://127.0.0.1/*"
      ],
      "js": [
        "src/content/content.js"
      ],
      "css": [
        "src/content/content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
